# Development Dockerfile for backend with shared library support
FROM node:18-alpine

# Install canvas dependencies
RUN apk add --no-cache \
    cairo-dev \
    jpeg-dev \
    pango-dev \
    musl-dev \
    giflib-dev \
    pixman-dev \
    pangomm-dev \
    libjpeg-turbo-dev \
    freetype-dev \
    python3 \
    make \
    g++

WORKDIR /shared
COPY ./shared/package*.json ./
RUN npm ci
COPY ./shared/ ./
RUN npm run build

WORKDIR /app

# Copy package files
COPY ./backend/package*.json ./

# Install dependencies
RUN npm ci

# Copy backend source
COPY ./backend/ ./

# Ensure data files are in the correct location for both source and build
RUN mkdir -p src/data/reports && mkdir -p dist/data/reports
COPY ./backend/src/data/reports/*.csv ./src/data/reports/
COPY ./backend/src/data/reports/*.csv ./dist/data/reports/

# Expose port
EXPOSE 3001

# Start in development mode
CMD ["npm", "run", "start:dev"]