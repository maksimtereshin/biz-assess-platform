# Business Assessment Platform - Environment Variables
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=bizass_platform

# JWT Configuration
# Generate a secure secret with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_SECRET_KEY

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Frontend URL (comma-separated for multiple URLs)
FRONTEND_URL=http://localhost:3000

# Production domains (without protocol)
PRODUCTION_DOMAIN=yourdomain.com
STAGING_DOMAIN=staging.yourdomain.com

# CORS debugging (set to "true" to log all blocked origins)
DEBUG_CORS=false

# Node Environment
NODE_ENV=development
